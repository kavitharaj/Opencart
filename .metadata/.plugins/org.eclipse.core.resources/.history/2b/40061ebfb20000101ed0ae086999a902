		lp.setemail(email);
		lp.setpassword(pw);
		lp.clicksubmit();

		Myaccountpage mcc = new Myaccountpage(driver);
		boolean targetpage = mcc.ismyAccountexists();

		if (targetpage == true) {
			mcc.clicklogout();
			Assert.assertTrue(true);
		} else
			Assert.assertTrue(false);
	 }
	 catch(Exception e) {
		 e.printStackTrace();
	 }
	
		/*
