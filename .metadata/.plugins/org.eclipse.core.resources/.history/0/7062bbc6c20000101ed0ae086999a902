		Homepage hp = new Homepage(driver);
		hp.clickmyaccount();
		hp.clicklogin();

		Loginpage lp = new Loginpage(driver);

		lp.setemail(email);
		lp.setpassword(pw);
		lp.clicksubmit();

		Myaccountpage mcc = new Myaccountpage(driver);
		boolean targetpage = mcc.ismyAccountexists();
		System.out.println("target page"+ targetpage);
		mcc.clicklogout();
		/*
		 * if (result.equalsIgnoreCase("valid")) { if (targetpage == true) {
		 * hp.clickmyaccount(); mcc.clicklogout(); Assert.assertTrue(true); } else {
		 * Assert.assertTrue(false);
		 * 
		 * } }
		 */
		/*
		 * if (result.equalsIgnoreCase("invalid")) { if (targetpage == true) {
		 * hp.clickmyaccount(); mcc.clicklogout(); Assert.assertTrue(false); }
		 * 
		 * else Assert.assertTrue(true);
		 * 
		 * }
		 */
	}
}
